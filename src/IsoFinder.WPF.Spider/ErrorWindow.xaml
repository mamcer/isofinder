<Window x:Class="ISOFinder.WPF.Spider.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ISOFinder Express Spider"
    Height="305"
    Width="618"
    WindowStartupLocation="CenterScreen"
    ShowInTaskbar="False" FontFamily="Segoe UI Light">
    <Grid>
        <TextBox IsEnabled="True" IsReadOnly="True" Margin="0,0,0,37" Name="txtErrorText" TextDecorations="None" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="14" Text="Hello this is a test." FontFamily="Segoe UI"/>
        <Label Cursor="Hand" Foreground="Blue" Height="28" Margin="0,0,488,10" Name="lblCopyToClipboard" VerticalAlignment="Bottom" MouseLeftButtonDown="lblCopyToClipboard_MouseLeftButtonDown" FontFamily="Segoe UI" >Copy to Clipboard</Label>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,8,8" Name="btnOk" VerticalAlignment="Bottom" Width="75" Click="btnOk_Click" FontSize="14">Ok</Button>
    </Grid>
</Window>
