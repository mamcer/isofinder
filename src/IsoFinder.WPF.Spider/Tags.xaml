<Window x:Class="ISOFinder.WPF.Spider.Tags"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tags" Height="177" Width="392" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <TextBox x:Name="txtTags" Height="30" Margin="10,54,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="16" Padding="0" VerticalContentAlignment="Center"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Right" Margin="0,0,90,12" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.107,1.409" Click="btnOk_Click" Height="22"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="0,0,10,12" RenderTransformOrigin="0.107,1.409" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnCancel_Click"/>
        <Label Content="Tags: (separated by ;)" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.711,0.885"/>

    </Grid>
</Window>
